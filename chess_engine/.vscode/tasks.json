{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/Bishop.cc",
                "${fileDirname}/Board.cc",
                "${fileDirname}/Empty_square.cc",
                "${fileDirname}/King.cc",
                "${fileDirname}/Knight.cc",
                "${fileDirname}/Pawn.cc",
                "${fileDirname}/Piece.cc",
                "${fileDirname}/Queen.cc",
                "${fileDirname}/Rook.cc",
                "${fileDirname}/Square.cc",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/lib"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}